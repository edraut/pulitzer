<%= form_for tag, html: ajax_form_hash('#tags_container', insert_method: 'append', sub_class: "AddALineForm", container: '#new_tag') do |f| %>
  <%= render partial: 'form_fields', locals: { f: f } %>
  <%= f.submit "Create" %>
  <%= link_to('Cancel', '#', :class => 'button',
    data: { emptier: true, target: '#new_tag' } ) %>
<% end %>
<%= render 'pulitzer/shared/error_messages', object: tag %>
