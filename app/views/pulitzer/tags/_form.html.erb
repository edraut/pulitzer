<%= form_for tag, html: ajax_form_hash(dom_target(tag)) do |f| %>
  <%= render partial: 'form_fields', locals: { f: f } %>
  <%= f.submit 'Update' %>
  <%= link_to('Cancel', tag_path(tag), :class => 'button',
    data: { ajax_link: true, ajax_target: dom_target(tag) } ) %>
<% end %>
<%= render 'pulitzer/shared/error_messages', object: tag %>
