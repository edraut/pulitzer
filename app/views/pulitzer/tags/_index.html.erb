<h3>Hierarchical Tags</h3>
<% if authorized? %>
  <%= ajax_link 'Add a new root tag', new_tag_path("tag[hierarchical]" => true), {}, '#new_tag' %>
  <div id="new_tag"></div>
<% end %>
<div id="tags_container">
  <%= render partial: 'show_wrapper', collection: @root_tags, as: :tag %>
</div>
<hr/>

<h3>Flat Tags</h3>
<% if authorized? %>
  <%= ajax_link 'Add a new tag', new_tag_path("tag[hierarchical]" => false), {}, '#new_flat_tag' %>
  <div id="new_flat_tag"></div>
<% end %>

<div id="flat_tags">
  <%= render partial: 'show_wrapper', collection: @flat_tags, as: :tag %>
</div>
