<%= render 'pulitzer/shared/error_messages', object: post %>
<%= form_for post, url: update_slug_post_path(post), html: ajax_form_hash(dom_target(post),
      error_target: dom_target(post)) do |f| %>
  <%= f.label :slug %>
  <%= f.text_field :slug %>
  <%= f.submit data: {disable_with: false} %>
  <%= link_to('Cancel', show_slug_post_path(post), :class => 'button',
    data: { ajax_link: true, ajax_target: dom_target(post) } ) %>
<% end %>
