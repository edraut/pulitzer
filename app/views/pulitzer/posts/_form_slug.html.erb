<%= form_for post, url: update_slug_post_path(post, version_id: version), html: ajax_form_hash(dom_target(version)) do |f| %>
  <%= f.label :slug %>
  <%= f.text_field :slug %>
  <%= f.submit %>
  <%= link_to('Cancel', show_slug_post_path(post, version_id: version), :class => 'button',
    data: { ajax_link: true, ajax_target: dom_target(post) } ) %>
<% end %>
