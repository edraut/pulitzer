<%= render 'pulitzer/shared/error_messages', object: post %>
<%= form_for post, html: ajax_form_hash(dom_target(post)) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.submit %>
  <%= link_to('Cancel', post_path(post), :class => 'button',
    data: { ajax_link: true, ajax_target: dom_target(post) } ) %>
<% end %>
