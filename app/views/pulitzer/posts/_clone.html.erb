<div class="pulitzer-row margin-bottom" id="<%= dom_id(post) %>">
  <% if post.post_type_version.processing_failed? %>
    <div class="pulitzer-row">
      There was a problem cloning this post.
    </div>
  <% elsif post.post_type_version.processing? %>
    <p>Cloning posts for <%= post.title%> </p>
    <div class="pulitzer-row">
      <progress value="1" max="<%= post.post_type_version.published_posts_count + 1 %>" <%= listener_attrs post.post_type_version, :processed_element_count if defined? ForeignOffice %>></progress>
    </div>
    <a <%= listener_attrs post.post_type_version, :finished_processing, trigger: true if defined? ForeignOffice %>
       <%= ajax_link_attrs(dom_target(post)) %> > </a>
  <% end %>
</div>
