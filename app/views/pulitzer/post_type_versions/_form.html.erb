<%= render 'pulitzer/shared/error_messages', object: post_type_version %>
<%= form_for post_type_version, html: ajax_form_hash(dom_target(post_type_version)) do |f| %>
  <%= render partial: 'form_fields', locals: { f: f } %>
  <%= f.submit "Update" %>
  <%= link_to('Cancel', post_type_version_path(post_type_version), :class => 'button',
    data: { ajax_link: true, ajax_target: dom_target(post_type_version) } ) %>
<% end %>
