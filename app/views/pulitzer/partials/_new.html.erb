<%= render 'pulitzer/shared/error_messages', object: partial %>
<%= form_for partial, html: ajax_form_hash(dom_target(partial.version, :partial_container), insert_method: 'append', empty_on_success: dom_target(partial.version, :new_partial)) do |f| %>
  <%= render partial: 'fields', locals: {f: f} %>
  <%= f.hidden_field :version_id %>

  <%= submit_tag "Create" %>
  <%= link_to('Cancel', '#', :class => 'button',
    data: { emptier: true, target: dom_target(partial.version, :new_partial) } ) %>
<% end %>